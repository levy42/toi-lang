fn read_all(path)
  local f, err = io.open(path, "r")
  if f == nil
    error("cannot read template file: " + path)

  out = f.read()
  f.close()
  if out == nil
    return ""
  return out

TEMPLATE_PATH = "examples/templates/all_syntax_showcase.tmpl"
tmpl_source = read_all(TEMPLATE_PATH)
tmpl_page = template.compile(tmpl_source)

