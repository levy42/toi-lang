<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>fileTypes</key>
    <array>
        <string>pua</string>
    </array>
    <key>name</key>
    <string>Pua</string>
    <key>scopeName</key>
    <string>source.pua</string>
    <key>patterns</key>
    <array>
        <!-- Single-line comments -->
        <dict>
            <key>match</key>
            <string>--.*$</string>
            <key>name</key>
            <string>comment.line.double-dash.pua</string>
        </dict>

        <!-- f-strings: f"..." -->
        <dict>
            <key>begin</key>
            <string>\bf"</string>
            <key>end</key>
            <string>"</string>
            <key>name</key>
            <string>string.quoted.double.fstring.pua</string>
            <key>patterns</key>
            <array>
                <dict>
                    <key>match</key>
                    <string>\\[nrt\\"']</string>
                    <key>name</key>
                    <string>constant.character.escape.pua</string>
                </dict>
            </array>
        </dict>

        <!-- Multiline strings [[...]] -->
        <dict>
            <key>begin</key>
            <string>\[\[</string>
            <key>end</key>
            <string>\]\]</string>
            <key>name</key>
            <string>string.quoted.other.multiline.pua</string>
        </dict>

        <!-- Double-quoted strings with escapes -->
        <dict>
            <key>begin</key>
            <string>"</string>
            <key>end</key>
            <string>"</string>
            <key>name</key>
            <string>string.quoted.double.pua</string>
            <key>patterns</key>
            <array>
                <dict>
                    <key>match</key>
                    <string>\\[nrt\\"']</string>
                    <key>name</key>
                    <string>constant.character.escape.pua</string>
                </dict>
            </array>
        </dict>

        <!-- Function definition: fn name(...) -->
        <dict>
            <key>match</key>
            <string>\b(fn)\s+([a-zA-Z_][a-zA-Z0-9_]*)\s*\(</string>
            <key>captures</key>
            <dict>
                <key>1</key>
                <dict>
                    <key>name</key>
                    <string>keyword.declaration.function.pua</string>
                </dict>
                <key>2</key>
                <dict>
                    <key>name</key>
                    <string>entity.name.function.pua</string>
                </dict>
            </dict>
        </dict>

        <!-- Local function: local fn name(...) -->
        <dict>
            <key>match</key>
            <string>\b(local)\s+(fn)\s+([a-zA-Z_][a-zA-Z0-9_]*)\s*\(</string>
            <key>captures</key>
            <dict>
                <key>1</key>
                <dict>
                    <key>name</key>
                    <string>keyword.declaration.pua</string>
                </dict>
                <key>2</key>
                <dict>
                    <key>name</key>
                    <string>keyword.declaration.function.pua</string>
                </dict>
                <key>3</key>
                <dict>
                    <key>name</key>
                    <string>entity.name.function.pua</string>
                </dict>
            </dict>
        </dict>

        <!-- Anonymous function: fn(...) -->
        <dict>
            <key>match</key>
            <string>\b(fn)\s*\(</string>
            <key>captures</key>
            <dict>
                <key>1</key>
                <dict>
                    <key>name</key>
                    <string>keyword.declaration.function.pua</string>
                </dict>
            </dict>
        </dict>

        <!-- Control flow keywords -->
        <dict>
            <key>match</key>
            <string>\b(if|else|elif|while|for|in|return|break|continue|raise|try|except|with)\b</string>
            <key>name</key>
            <string>keyword.control.pua</string>
        </dict>

        <!-- Declaration keywords -->
        <dict>
            <key>match</key>
            <string>\b(local|fn|import|global|)\b</string>
            <key>name</key>
            <string>keyword.declaration.pua</string>
        </dict>

        <!-- Other keywords -->
        <dict>
            <key>match</key>
            <string>\b(print|gc)\b</string>
            <key>name</key>
            <string>keyword.other.pua</string>
        </dict>

        <!-- Logical operators -->
        <dict>
            <key>match</key>
            <string>\b(and|or|not)\b</string>
            <key>name</key>
            <string>keyword.operator.logical.pua</string>
        </dict>

        <!-- Boolean constants -->
        <dict>
            <key>match</key>
            <string>\b(true|false)\b</string>
            <key>name</key>
            <string>constant.language.boolean.pua</string>
        </dict>

        <!-- Nil constant -->
        <dict>
            <key>match</key>
            <string>\bnil\b</string>
            <key>name</key>
            <string>constant.language.nil.pua</string>
        </dict>

        <!-- Built-in functions -->
        <dict>
            <key>match</key>
            <string>\b(next|inext|range|range_iter|slice|setmetatable|getmetatable|error|type|int|float|bool|str|min|max|sum|self|)\b</string>
            <key>name</key>
            <string>support.function.builtin.pua</string>
        </dict>

        <!-- Variadic parameter *args -->
        <dict>
            <key>match</key>
            <string>\*[a-zA-Z_][a-zA-Z0-9_]*</string>
            <key>name</key>
            <string>variable.parameter.variadic.pua</string>
        </dict>

        <!-- Variadic ... -->
        <dict>
            <key>match</key>
            <string>\.\.\.</string>
            <key>name</key>
            <string>variable.language.varargs.pua</string>
        </dict>

        <!-- Floating point numbers -->
        <dict>
            <key>match</key>
            <string>\b\d(?:[\d_]*\d)?\.\d(?:[\d_]*\d)?\b</string>
            <key>name</key>
            <string>constant.numeric.float.pua</string>
        </dict>

        <!-- Integer numbers -->
        <dict>
            <key>match</key>
            <string>\b\d(?:[\d_]*\d)?\b</string>
            <key>name</key>
            <string>constant.numeric.integer.pua</string>
        </dict>

        <!-- Comparison operators -->
        <dict>
            <key>match</key>
            <string>==|!=|&lt;=|&gt;=|&lt;|&gt;</string>
            <key>name</key>
            <string>keyword.operator.comparison.pua</string>
        </dict>

        <!-- Arithmetic operators -->
        <dict>
            <key>match</key>
            <string>\*\*|//|[+\-*/%]</string>
            <key>name</key>
            <string>keyword.operator.arithmetic.pua</string>
        </dict>

        <!-- Assignment -->
        <dict>
            <key>match</key>
            <string>=</string>
            <key>name</key>
            <string>keyword.operator.assignment.pua</string>
        </dict>

        <!-- Length operator -->
        <dict>
            <key>match</key>
            <string>#</string>
            <key>name</key>
            <string>keyword.operator.length.pua</string>
        </dict>

        <!-- Ternary operator -->
        <dict>
            <key>match</key>
            <string>\?|:</string>
            <key>name</key>
            <string>keyword.operator.ternary.pua</string>
        </dict>

        <!-- Range operator -->
        <dict>
            <key>match</key>
            <string>\.\.</string>
            <key>name</key>
            <string>keyword.operator.range.pua</string>
        </dict>

        <!-- Function call -->
        <dict>
            <key>match</key>
            <string>\b([a-zA-Z_][a-zA-Z0-9_]*)\s*\(</string>
            <key>captures</key>
            <dict>
                <key>1</key>
                <dict>
                    <key>name</key>
                    <string>entity.name.function.call.pua</string>
                </dict>
            </dict>
        </dict>

        <!-- Method call with dot -->
        <dict>
            <key>match</key>
            <string>\.([a-zA-Z_][a-zA-Z0-9_]*)\s*\(</string>
            <key>captures</key>
            <dict>
                <key>1</key>
                <dict>
                    <key>name</key>
                    <string>entity.name.function.call.pua</string>
                </dict>
            </dict>
        </dict>

        <!-- Table/object property access -->
        <dict>
            <key>match</key>
            <string>\.([a-zA-Z_][a-zA-Z0-9_]*)</string>
            <key>captures</key>
            <dict>
                <key>1</key>
                <dict>
                    <key>name</key>
                    <string>variable.other.property.pua</string>
                </dict>
            </dict>
        </dict>

        <!-- Identifiers -->
        <dict>
            <key>match</key>
            <string>\b[a-zA-Z_][a-zA-Z0-9_]*\b</string>
            <key>name</key>
            <string>variable.other.pua</string>
        </dict>
    </array>
</dict>
</plist>
